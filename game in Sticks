number_of_stiks = 10 # количество палочек
player = 1 # по умолчанию игру начинает игрок номер 1

while number_of_stiks > 0: # используем цикл while, потому-что нам нужно повторять цикл многократно
    print(f'Сколько палочек вы хотите взять? Осталось {number_of_stiks} ')
    taken = int(input()) # Ввод пользователя

    if taken < 1 or taken > 3: # проверяем правильность введение игрока
        print(f'Вы попытались взять {taken}. А позволено 1,2,3 палочек')
        continue # если правило нарушаеться , то возвращаемся к началу цикла

    number_of_stiks -= taken
    print(f'Вы взяли: {taken} палочек\n')

    if number_of_stiks <= 0: # условия окончания игры
        print(f'Палочки закончились.\nИгрок {player} проиграл')
    player = 1 if player == 2 else 2 # алгоритм переключение игроков
